{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": false,
    "isolatedModules": false,

    "strict": true,
    "alwaysStrict": true,
    "incremental": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
